    <button onclick="topFunction()" id="topBtn" title="Go to top"></button>
   <!-- menu toogle -->
   <script type="text/javascript">
    function myFunction() {
        var navbar = document.getElementById('nav')
        navbar.classList.toggle('show');
    }
    </script>
    <!-- navbar animation -->
    <script type="text/javascript">
        function yeet() {
            var navbar = document.getElementById('nav')
            navbar.classList.toggle('show');
            var menu = document.getElementById('menu-btn')
            menu.classList.toggle("change");
        }
        </script>
    <script>
        function btn() {
            var menu = document.getElementById('menu-btn')
            menu.classList.toggle("change");
           }
       </script>

    <script>
        // When the user scrolls down 80px from the top of the document, resize the navbar's padding and the logo's font size
        window.onscroll = function() {scrollFunction()};

        function scrollFunction() {
        if (document.body.scrollTop > 80 || document.documentElement.scrollTop > 80) {
            document.getElementById("header").style.maxHeight = "100px";
            document.getElementById("logo-img").style.height = "100px";
            document.getElementById("nav").style.padding = "2rem 0 0 0";
            document.getElementById("menu-btn").style.top = "3.5rem";
            document.getElementById("topBtn").style.display = "block";
        } else {
            document.getElementById("header").style.maxHeight = "150px";
            document.getElementById("logo-img").style.height = "100%";
            document.getElementById("nav").style.padding = "4.2rem 0 4.2rem 0";
            document.getElementById("menu-btn").style.top = "6.5rem";
            document.getElementById("topBtn").style.display = "none";
        }
        }

        function topFunction() {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        }
    </script>
    <!-- Float on scroll -->
    <script type="text/javascript">
        window.addEventListener('scroll', reveal);

        function reveal(){
            var reveals = document.querySelectorAll('.reveal');

            for(var i = 0; i < reveals.length; i++){

                var windowheight = window.innerHeight;
                var revealtop = reveals[i].getBoundingClientRect().top;
                var revealpoint = 0;

                if(revealtop < windowheight){
                    reveals[i].classList.add('active');
                }
            }
        }
    </script>
    <script>
        window.addEventListener('hashchange', e => {
            history.replaceState({}, "", location.hash.slice(1));
        });
    </script>

